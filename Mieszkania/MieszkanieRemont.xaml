<Window x:Class="Mieszkania.Raporty.MieszkanieRemont"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mieszkania.Raporty"
        mc:Ignorable="d"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        Title="MieszkanieRemont" Height="450" Width="800">
    <Grid Background="#f6f6f6">
       
        <WindowsFormsHost HorizontalAlignment="Left" Height="338" Margin="10,71,0,0" VerticalAlignment="Top" Width="772">
            <rv:ReportViewer x:Name="R_MieszkanieRemont"></rv:ReportViewer>
        </WindowsFormsHost>
        <Label Content="Wybierz ID mieszkania"  Foreground="#2EC4B6" HorizontalAlignment="Left" Margin="10,10,0,0" FontSize="15" VerticalAlignment="Top" Height="50" Width="160"/>
        <ComboBox x:Name="CBid"                 Foreground="#2EC4B6" HorizontalAlignment="Left" Margin="180,10,0,0" FontSize="15" VerticalAlignment="Top" Width="360" Height="50"/>
        <Button Content="Wygeneruj raport"      HorizontalAlignment="Left" Margin="555,10,0,0" Foreground="White" Background="#2EC4B6" FontSize="20" VerticalAlignment="Top" Width="220" Click="Button_Click" Height="50"/>

    </Grid>
</Window>
